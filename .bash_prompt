#!/usr/bin/env bash
# See: http://ss64.com/bash/syntax-prompt.html

# Setup prompt using Solarized colors
# See: https://github.com/altercation/solarized/tree/master/iterm2-colors-solarized#the-values
setup_prompt() {
  tput sgr0

  local bold="$(tput bold)"
  local reset="$(tput sgr0)"
  local green="$(tput setaf 64)"
  local orange="$(tput setaf 166)"
  local white="$(tput setaf 15)"
  local yellow="$(tput setaf 136)"

  PS1='\n'
  PS1+="\[$bold\]"
  PS1+="\[$orange\]\u"
  PS1+="\[$white\]@"
  PS1+="\[$yellow\]\h"
  PS1+="\[$white\]: "
  PS1+="\[$green\]\w"
  PS1+='\n'
  PS1+="\[$white\]$ \[$reset\]"

  export PS1
}

setup_prompt

unset -f setup_prompt
