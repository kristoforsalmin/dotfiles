"*":
  core:
    disabledPackages: [
      "background-tips"
      "exception-reporting"
      "metrics"
      "package-generator"
      "styleguide"
      "update-package-dependencies"
      "welcome"
      "wrap-guide"
    ]
    themes: [
      "atom-light-ui"
      "one-light-syntax"
    ]
  editor:
    fontSize: 14
    invisibles: {}
    showIndentGuide: true
  emmet: {}
  linter:
    lintOnFly: false
    showErrorInline: false
    showErrorTabLine: false
    underlineIssues: false
  "markdown-preview":
    useGitHubStyle: true
  "tree-view":
    hideIgnoredNames: true
    hideVcsIgnoredFiles: true
  whitespace:
    ignoreWhitespaceOnCurrentLine: false
